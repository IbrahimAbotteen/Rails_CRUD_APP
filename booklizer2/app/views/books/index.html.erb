<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the current books in our system</p>
<ul id = "books">
   <% @books.each do |c| %>
   <h2><%= link_to c.title, {:action => 'show', :id => c.id} -%></h2>
   <% end %>
</ul>
<h1><%= link_to "Add new Book", {:action => 'new' }%></h1>

<% end %>